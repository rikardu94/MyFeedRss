<a href="@PostInfo.Link"><h1>@PostInfo.Title</h1></a>

@if (PostInfo.Content is not null)
{
    @if (PostInfo.Content.IsContentHtml())
    {
        @((MarkupString)PostInfo.Content.Content)
    }
    else
    {
        <p>@PostInfo.Content.Content</p>
    }
}
else
{
    <p>Pas de contenu à afficher</p>
}
